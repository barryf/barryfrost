{%- import 'elements.njk' as elements %}
{%- extends 'layout.njk' %}

{%- block head %}
  <title>Post</title>
  <link rel="webmention" href="https://webmention.io/barryf/webmention">
{%- endblock %}

{%- block content %}
<main class="page-content">
  <div class="wrapper">
    <article class="post h-entry">

      <header class="post-header">
        <p class="post-meta">
          <time class="dt-published" datetime="{{ post.published }}">
            {{ post._publishedHuman | upper }}
          </time>
        </p>
      </header>

      <div class="post-content e-content">
        {{ post._contentHtml | safe }}
      </div>

      {{ elements.categories(post.category) }}

    </article>

    <details>
      <summary>JSON</summary>
      <pre>{{ postJSON }}</pre>
    </details>
  </div>
</main>
{%- endblock %}
