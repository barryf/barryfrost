{%- import 'elements.njk' as elements %}
{%- extends 'layout.njk' %}

{%- block head %}
<title>
  {{ post.name }}
  &middot; Barry Frost
</title>
{{ elements.link_webmention() }}
{%- endblock %}

{%- block content %}
<main class="page-content">
  <div class="wrapper">
    <article class="post h-entry">

      <header class="post-header">
        <h1 class="post-title p-name">{{ post.name | escape }}</h1>
        <p class="post-meta">
          {{ elements.published(post) }}
          {{ elements.updated(post) }}
        </p>
      </header>

      <div class="post-content e-content">
        {{ post._contentHtml | safe }}
      </div>

      {{ elements.categories(post.category) }}

    </article>

    {{ elements.details(postJSON) }}
  </div>
</main>
{%- endblock %}
