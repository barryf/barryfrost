{%- extends 'layout.njk' %}
{%- block content %}

<main class="page-content">
  <div class="wrapper">
    <article class="post h-entry">

      <header class="post-header">
        <p class="post-meta">
          <time class="dt-published datetime="{{ post.published }}">
            {{ post.publishedHuman | upper }}
          </time>
        </p>
      </header>

      <div class="post-content e-content">
        {{ post.contentHtml | safe }}

        <ul>
        {%- for cat in post.category %}
          <li>{{ cat }}</li>
        {%- endfor %}
        </ul>
      </div>

    </article>

    <details>
      <summary>JSON</summary>
      <pre>{{ postJSON }}</pre>
    </details>
  </div>
</main>

{%- endblock %}
