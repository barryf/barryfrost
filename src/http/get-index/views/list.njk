{%- extends 'layout.njk' %}
{%- block content %}

<main class="page-content">
  <div class="wrapper">
    <div class="home">

      <ul class="post-list h-feed">
      {%- for post in posts %}
        <li class="post h-entry">
          <header class="post-header">
            <p class="post-meta">
              <a href="{{ post.url }}">
                <time class="dt-published" datetime="{{ post.published }}">
                  {{ post._publishedHuman | upper }}
                </time>
              </a>
            </p>
          </header>
          <div class="post-content e-content">
            {{ post._contentHtml | safe }}
          </div>
        </li>
      {%- endfor %}
      </ul>

      {%- if (lastPublishedInt) %}
        <p><a href="?before={{ lastPublishedInt }}">Previous</a></p>
      {%- endif %}

    </div>
  </div>
</main>

{%- endblock %}
