{%- extends 'layout.njk' %}

{%- block head %}
<link rel="webmention" href="{{ webmentionUrl }}">
<meta name="title" content="{{ metadata.title | escape }}">
<meta name="description" content="{{ metadata.description | escape }}">
<meta property="og:type" content="website">
<meta property="og:url" content="{{ post.url }}">
<meta property="og:title" content="{{ metadata.title | escape }}">
<meta property="og:description" content="{{ metadata.description | escape }}">
<meta property="twitter:card" content="summary">
<meta property="twitter:site" content="@barryf">
<meta property="twitter:url" content="{{ post.url }}">
<meta property="twitter:title" content="{{ metadata.title | escape }}">
<meta property="twitter:description" content="{{ metadata.description | escape }}">
<title>{{ metadata.title }}</title>
{%- endblock %}

{%- block content %}
<article class="h-entry">

  <header class="">
    {%- include 'includes/title.njk' %}
    {%- include 'includes/published.njk' %}
  </header>

  {%- include 'includes/in-reply-to.njk' %}
  {%- include 'includes/repost-of.njk' %}
  {%- include 'includes/bookmark-of.njk' %}
  {%- include 'includes/like-of.njk' %}
  {%- include 'includes/photos.njk' %}
  {%- include 'includes/content.njk' %}

  <footer class="">
    {%- include 'includes/categories.njk' %}
    {%- include 'includes/location.njk' %}
    {%- include 'includes/syndications.njk' %}
    {%- include 'includes/author.njk' %}
  </footer>

  {%- include 'includes/raw.njk' %}

</article>
{%- endblock %}
