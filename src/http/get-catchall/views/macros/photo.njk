{%- macro photo(photo) %}
{%- set photoUrl = photo.value if photo.value else photo %}

<figure>
  <a href="{{ photoUrl }}">
    <img class="u-photo shadow rounded max-h-96" src="{{ photoUrl }}"
      alt="{%- if photo.alt %}{{ photo.alt }}{%- else %}Photo{%- endif %}">
  </a>
</figure>

{%- endmacro %}
