{%- macro photo(photo) %}

 <figure>
  {%- if photo.value %}
    <a href="{{ photo.value }}">
      <img class="u-photo" src="{{ photo.value }}"{%- if photo.alt %} alt="{{ photo.alt }}"{%- endif %}>
    </a>
  {%- else %}
    <a href="{{ photo }}">
      <img class="u-photo" src="{{ photo }}">
    </a>
  {%- endif %}
</figure>

{%- endmacro %}
