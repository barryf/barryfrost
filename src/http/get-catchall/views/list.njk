{%- extends 'layout.njk' %}
{%- import 'macros/icon.njk' as icon %}

{%- block content %}
<div class="h-feed">
  <div class="flex items-center mb-12 text-lg md:text-xl text-gray-600 dark:text-gray-400">
    {%- include 'includes/author.njk' %}
    <span class="text-gray-400 dark:text-gray-600 mx-1">/</span>
    {%- if title != 'date' %}
      <h1 class="text-gray-800 dark:text-gray-200 uppercase">{{ title }}</h1>
    {%- elif year and not month %}
      <span class="text-gray-800 dark:text-gray-200">{{ year }}</span>
    {%- else %}
      <a href="/{{ year }}" class="text-gray-600 dark:text-gray-400 hover:text-yellow-600 dark:hover:text-yellow-600">{{ year }}</a>
      <span class="text-gray-400 dark:text-gray-600 mx-1">/</span>
      {%- if not day %}
        <span class="text-gray-800 dark:text-gray-200">{{ month }}</span>
      {%- else %}
        <a href="/{{ year }}/{{ month }}" class="text-gray-600 dark:text-gray-400 hover:text-yellow-600 dark:hover:text-yellow-600">{{ month }}</a>
        <span class="text-gray-400 dark:text-gray-600 mx-1">/</span>
        <span class="text-gray-800 dark:text-gray-200">{{ day }}</span>
      {%- endif %}
    {%- endif %}
  </div>
  {%- include 'includes/list-posts.njk' %}
</div>

{%- if nextInt %}
<div class="text-right uppercase text-base md:text-lg text-gray-600 dark:text-gray-400">
  <a href="?before={{ nextInt }}" rel="nofollow prev" class="hover:text-yellow-600 dark:hover:text-yellow-600">
    Previous â†’
  </a>
</div>
{%- endif %}
{%- endblock %}
