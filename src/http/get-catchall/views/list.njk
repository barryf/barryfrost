{%- extends 'layout.njk' %}

{%- block content %}

<ul class="h-feed">
  {%- for post in posts %}
    <li class="h-entry mb-8">

      <div class="mb-1 text-sm md:text-base text-gray-600 dark:text-gray-400">
        {%- include 'includes/post-type-icon.njk' %}
        {%- include 'includes/published.njk' %}
      </div>

      {%- if post.properties.name %}
        <h2 class="p-name text-lg md:text-xl tracking-tight text-gray-800 dark:text-gray-200">
          <a href="{{ post.url[0] }}" class="{{ 'font-bold text-yellow-600' if post['post-type'] == 'article' }} hover:text-black">
            {{ post.properties.name[0] }}
          </a>
        </h2>
      {%- endif %}

      {%- include 'includes/summary.njk' %}

    </li>
  {%- endfor %}
</ul>

{%- if lastPublishedInt %}
  <p><a href="?before={{ lastPublishedInt }}" rel="nofollow prev">Previous</a></p>
{%- endif %}

{%- endblock %}
