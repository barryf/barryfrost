{%- if post.properties.photo %}
  {%- set photo = post.properties.photo[0] %}
  <figure>
    {%- if photo.value %}
      <a href="{{ photo.value }}">
        <img class="u-photo" src="{{ imageOptimise(photo.value) }}" alt="{{ photo.alt }}">
      </a>
    {%- else %}
      <a href="{{ photo }}">
        <img class="u-photo" src="{{ imageOptimise(photo) }}">
      </a>
    {%- endif %}
  </figure>
{%- endif%}
