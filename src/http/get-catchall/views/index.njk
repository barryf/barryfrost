{%- extends 'layout.njk' %}
{%- import 'macros/icon.njk' as icon %}

{%- block head %}
<link rel="me" href="mailto:auth@barryfrost.com">
<link rel="micropub" href="{{ process.env.MICROPUB_URL }}">
<link rel="webmention" href="{{ urls.webmention }}">
<link rel="microsub" href="https://aperture.p3k.io/microsub/28">
<link rel="authorization_endpoint" href="https://indieauth.com/auth">
<link rel="token_endpoint" href="https://tokens.indieauth.com/token">
<title>Barry Frost</title>
{%- endblock %}

{%- block content %}
<h1 class="h-card mb-4 text-lg md:text-xl text-gray-800 dark:text-gray-200">
  <img src="{{ urls.favicon }}" class="u-photo hidden" alt="Barry Frost">
  <span class="p-name uppercase">Barry Frost</a>
</h1>

<p class="mb-8 md:text-lg">
  The page or post. This is my website and here's some text about me. If you want to read this
  then go ahead and keep reading right until the end. It may even last for a
  few lines of text.
</p>

<hr class="mb-8 border-gray-400">

{%- set postTypes = ['Article', 'Note', 'Photo', 'Bookmark', 'Reply', 'Like', 'Repost', 'Checkin', 'RSVP'] %}
{%- set klass = 'hover:text-yellow-600 inline-block my-1 mr-2 md:mr-3' %}
<div class="mb-8 text-lg md:text-xl text-gray-600 dark:text-gray-400">
  <a href="/all" class="{{ klass }}">
    <span class="whitespace-nowrap">
      {{ icon.icon('all') }}
      All
    </span>
  </a>
  {%- for type in postTypes %}
    {%- set plural = type + 's' if type != 'Reply' else 'Replies' %}
    <a href="/{{ plural | lower }}" class="{{ klass }}">
      <span class="whitespace-nowrap">
        {{ icon.icon(type | lower) }}
        {{ plural }}
      </span>
    </a>
  {%- endfor %}
</div>

{%- endblock %}
