{%- if post.properties['like-of'] %}
{%- import '../macros/context.njk' as context %}

<div class="mb-8">
  <ul>
    {%- for likeOf in post.properties['like-of'] %}
      <li>
        {{ context.context(likeOf, 'Liked', helpers, 'post', loop.first) }}
      </li>
    {%- endfor %}
  </ul>
</div>

{%- endif %}
