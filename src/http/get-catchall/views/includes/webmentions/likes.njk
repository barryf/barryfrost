{%- if post.properties.like %}

<div class="mb-8">
  <h2 class="mb-1">
    <span class="text-gray-600 dark:text-gray-400 text-base md:text-lg">LIKES</span>
    <span class="text-gray-400 dark:text-gray-600 text-sm md:text-base">{{ post.properties.like | length }}</span>
  </h2>
  <ul>
    {%- for like in post.properties.like %}
      {%- if like.properties.author %}
        <li class="h-cite p-like float-left">
          <a href="{{ like.properties.url[0] }}" class="u-url block bg-gray-300 w-10 h-10 md:w-11 md:h-11 overflow-hidden rounded-full -mr-1 hover:text-yellow-600">
            <span class="h-card p-author">
              {%- if like.properties.author[0].properties.photo %}
                {%- set photoUrl = like.properties.author[0].properties.photo[0].value if like.properties.author[0].properties.photo[0].value else like.properties.author[0].properties.photo[0] %}
                {%- set photoUrl = photoUrl | replace('http://pbs.twimg.com/', 'https://pbs.twimg.com/') %}
                <img src="{{ photoUrl }}"
                  alt="{{ like.properties.author[0].properties.name[0] }}"
                  title="{{ like.properties.author[0].properties.name[0] }}"
                  class="u-photo w-10 h-10 md:w-11 md:h-11">
              {%- else %}
                <span class="p-name">
                  {{ like.properties.author[0].properties.name[0] }}
                </span>
              {%- endif %}
            </span>
          </a>
        </li>
      {%- endif %}
    {%- endfor %}
  </ul>
  <div class="clear-left"></div>
</div>

{%- endif %}
