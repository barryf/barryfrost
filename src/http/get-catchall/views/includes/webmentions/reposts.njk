{%- if post.properties.repost %}

<div class="mb-8">
  <h2 class="mb-1">
    <span class="text-gray-600 text-sm md:text-base">REPOSTS</span>
    <span class="text-gray-400 text-xs md:text-sm">{{ post.properties.repost | length }}</span>
  </h2>
  <ul>
    {%- for repost in post.properties.repost %}
      {%- if repost.properties.author %}
        <li class="float-left">
          <a href="{{ repost.properties.url[0] }}" class="block bg-gray-300 w-10 h-10 md:w-11 md:h-11 overflow-hidden rounded-full -mr-1 hover:text-yellow-600">
            {%- if repost.properties.author[0].properties.photo %}
              {%- set photoUrl = repost.properties.author[0].properties.photo[0].value if repost.properties.author[0].properties.photo[0].value else repost.properties.author[0].properties.photo[0] %}
              {%- set photoUrl = photoUrl | replace('http://pbs.twimg.com/', 'https://pbs.twimg.com/') %}
              <img src="{{ photoUrl }}"
                alt="{{ repost.properties.author[0].properties.name[0] }}"
                title="{{ repost.properties.author[0].properties.name[0] }}"
                class="w-10 h-10 md:w-11 md:h-11">
            {%- else %}
              {{ repost.properties.author[0].properties.name[0] }}
            {%- endif %}
          </a>
        </li>
      {%- endif %}
    {%- endfor %}
  </ul>
  <div class="clear-left"></div>
</div>

{%- endif %}
