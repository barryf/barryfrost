{%- if post.properties['bookmark-of'] %}
{%- import '../macros/context.njk' as context %}

<div class="mb-8">
  <ul>
    {%- for bookmarkOf in post.properties['bookmark-of'] %}
      <li>
        {{ context.context(bookmarkOf, 'Bookmarked', helpers) }}
      </li>
    {%- endfor %}
  </ul>
</div>

<h1 class="p-name mb-4 text-2xl md:text-3xl font-bold">
  <a href="{{ post.properties['bookmark-of'][0] }}" class="text-yellow-600 hover:text-gray-800 dark:hover:text-gray-200">
    {{ post.properties.name[0] | safe }}
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="inline w-5 h5 md:w-6 md:h-6 -mt-1">
      <path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z" />
      <path d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z" />
    </svg>
  </a>
</h1>

{%- endif %}
