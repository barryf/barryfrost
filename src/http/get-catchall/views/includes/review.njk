{%- if post['post-type'] == 'review' %}

<div class="text-gray-500 uppercase text-sm md:text-base">
  Watched
</div>
<h1 class="p-name mb-4 text-2xl md:text-3xl font-bold text-gray-800 dark:text-gray-200">
  {{ post.properties.name[0] | safe }}
</h1>

{%- if post.properties.rating %}
  <div class="text-gray-500 uppercase text-sm md:text-base">
    Rated
  </div>
  <div class="text-lg md:text-xl text-gray-600 dark:text-gray-400 tracking-widest">
    {%- set summaryParts = post.properties.summary[0].split(' ') %}
    {{ summaryParts | last }}
  </div>
{%- endif %}

<style>.h-review img { max-height: 250px; border-radius: 4px; }</style>

{%- endif %}
