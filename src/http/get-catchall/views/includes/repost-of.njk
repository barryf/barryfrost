{%- if post.properties['repost-of'] %}
{%- import '../macros/context.njk' as context %}

<div class="mb-8">
  <ul>
    {%- for repostOf in post.properties['repost-of'] %}
      <li>
        {{ context.context(repostOf, 'Reposted', helpers, 'post', loop.first) }}
      </li>
    {%- endfor %}
  </ul>
</div>

{%- endif %}
