{%- if post.properties.syndication %}

<ul class="mb-4">
  {%- for syndication in post.properties.syndication %}
    <li class="inline-block mr-2">
      <a rel="syndication" href="{{ syndication }}" class="u-syndication inline-block w-4 h-4 md:w-5 md:h-5 text-gray-600 hover:text-yellow-600">
        {{ helpers.iconFromUrl(syndication) | safe }}
      </a>
    </li>
  {%- endfor %}
</ul>

{%- endif %}
