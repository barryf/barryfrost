{%- if post['post-type'] == 'checkin' %}
{%- set location = post.properties.checkin[0] %}

<h2 class="text-gray-500 uppercase text-sm md:text-base">
  Checked in at
</h2>

<div class="md:text-lg text-gray-600 dark:text-gray-400 mb-8">
  <div class="p-checkin h-card">
    <span class="text-lg md:text-xl">
      <a href="https://maps.google.com/maps?q={{ location.properties.latitude[0] }},{{ location.properties.longitude[0] }}"
        class="font-bold text-yellow-600 hover:text-gray-800 dark:hover:text-gray-200" title="View on map">
        <span class="p-name">{{ location.properties.name[0] }}</span>
      </a>
    </span>
    <data class="p-latitude" value="{{ location.properties.latitude[0] }}"></data>
    <data class="p-longitude" value="{{ location.properties.longitude[0] }}"></data>
    {%- if location.properties.locality %}
      <span class="text-gray-400 dark:text-gray-600">/</span>
      <span class="p-locality">{{ location.properties.locality[0] }}</span>
    {%- endif %}
    {%- if location.properties.region %}
      <span class="text-gray-400 dark:text-gray-600">/</span>
      <span class="p-region">{{ location.properties.region[0] }}</span>
    {% endif %}
  </div>
</div>

<img src="/map{{ helpers.shortUrl(post) }}.png" class="max-h-80 mb-8 shadow rounded" alt="[Map of {{ location.properties.name[0] }}]">

{%- endif %}
