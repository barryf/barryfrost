<ul>
  {%- for post in posts %}
    <li class="h-entry mb-12">

      <span class="md:absolute md:-ml-6 md:mt-0.5">
        {{ icon.icon(post['post-type'][0]) }}
      </span>

      {%- if post.properties['in-reply-to'] %}
        <div class="inline text-sm md:text-base text-gray-600 dark:text-gray-400">
          <ul class="inline">
            {%- for inReplyTo in post.properties['in-reply-to'] %}
              <li class="inline">
                <a href="{{ inReplyTo }}"
                  class="u-in-reply-to text-yellow-600 hover:text-gray-800 dark:hover:text-gray-200">
                  {{ inReplyTo }}
                </a>
                <br>
              </li>
            {%- endfor %}
          </ul>
        </div>
      {%- endif %}

      {%- if post.properties.name %}
      <h2 class="p-name inline text-lg md:text-xl {{ 'font-bold' if post['post-type'] == 'article' }}">
        {%- if post['post-type'][0] == 'bookmark' %}
          <a href="{{ post.properties['bookmark-of'][0] }}" class="u-bookmark-of text-yellow-600 hover:text-gray-800 dark:hover:text-gray-200">
            {{ post.properties.name[0] }}
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="inline w-4 h4 md:w-5 md:h-5 -mt-0.5">
              <path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z" />
              <path d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z" />
            </svg>
          </a>
        {%- else %}
          <a href="{{ post.url[0] }}" class="text-yellow-600 hover:text-gray-800 dark:hover:text-gray-200">
            {{ post.properties.name[0] }}
          </a>
        {%- endif %}
      </h2>
      <br>
      {%- endif %}

      {%- if post.properties.photo %}
        {{ helpers.listPhotos(post) | safe }}
      {%- endif %}

      {%- include 'includes/summary.njk' %}

      <div class="mt-1.5 text-xs md:text-sm">
        {%- include 'includes/published.njk' %}
      </div>

      <div class="hidden">
        {%- include 'includes/author.njk' %}
        {%- include 'includes/categories.njk' %}
        {%- include 'includes/syndications.njk' %}
        {%- include 'includes/location.njk' %}
      </div>

    </li>
  {%- endfor %}
</ul>
