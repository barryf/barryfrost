{%- set url = post.url[0] | replace('https://barryf.co.uk', '') %}

<time class="dt-published" datetime="{{ post.properties.published[0] }}"
  title="{{ post.properties.published[0] | replace('T',' ') | replace('Z', ' UTC') }}">
  <a href="{{ url }}" class="underline text-gray-600 dark:text-gray-400 hover:text-yellow-600 dark:hover:text-yellow-600">
    {{ helpers.humanDate(post.properties.published[0]) | upper }}
  </a>
</time>

{%- if post.properties.updated %}
  <time class="dt-updated" datetime="{{ post.properties.updated[0] }}"></time>
{%- endif %}
