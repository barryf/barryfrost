{%- set url = post.url[0] | replace('https://barryf.co.uk', '') %}

<time class="dt-published mb-4 block" datetime="{{ post.properties.published[0] }}"
  title="{{ post.properties.published[0] | replace('T',' ') | replace('Z', ' UTC') }}">
  <a href="{{ url }}" class="uppercase text-gray-600 dark:text-gray-400 hover:text-yellow-600 dark:hover:text-yellow-600">
    {%- if format and format == 'full' %}
      {{ helpers.humanDateFull(post.properties.published[0]) }}
      <small>UTC</small>
    {%- else %}
      {{ helpers.humanDate(post.properties.published[0]) }}
    {%- endif %}
  </a>
</time>

{%- if post.properties.updated %}
  <time class="dt-updated" datetime="{{ post.properties.updated[0] }}"></time>
{%- endif %}
